<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= movies.title %>">
</div>
<div>
    <label>Genre</label>
    <input type="text" name="genre" value="<%= movies.genre %>">
</div>
<div>
    <label>Actor</label>
    <select name="actor">
        <% actors.forEach(actor => { %>
        <% if(actor.id === movies.actor) { %> 
        <option selected label="<%= actor.name %>" value="<%= actor.id %>">
        <% } else { %>
        <option label="<%= actor.name %>" value="<%= actor.id %>">
        <% } }) %>  
    </select>
</div>
<div>
    <label>Director</label>
    <select name="director">
        <% directors.forEach(director => { %>
        <% if(director.id === movies.director) { %> 
        <option selected label="<%= director.name %>" value="<%= director.id %>">
        <% } else { %>
        <option label="<%= director.name %>" value="<%= director.id %>">
        <% } }) %>  
    </select>
</div>
<div>
    <label>Release Date</label>
    <input type="date" name="releaseDate" 
        value="<%= (movies.releaseDate!=null) ? movies.releaseDate.toISOString().split('T')[0] : '' %>">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= movies.description  %></textarea>
</div>